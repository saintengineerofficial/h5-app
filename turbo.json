{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": [],
      "inputs": [],
      "dependsOn": ["^clean"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}
